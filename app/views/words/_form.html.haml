%h1 卡片制作

.record-form

  = simple_form_for :event, :url => translate_path(:format => :pdf), :method => :post do |f|
    = f.input :name, as: :string, label: '姓名', input_html: {class:  'form-control'}
    = f.input :age, label: '年龄', input_html: {class:  'form-control'}
    = f.input :book, as: :string, label: '书名', input_html: {class:  'form-control'}
    = f.input :words, label: '输入单词', hint: '以空格分隔', as: :text, input_html: {rows: 10, cols: 10}
    %br
    = f.button :submit, "卡片生成", class: "btn btn-success btn-lg btn-block", :disable_with => "Submitting…"
    
  %br

